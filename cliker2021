#include <iostream>
#include <Windows.h>

using namespace std;
int main()
{
system("color 0a");
POINT CurPos;
int t,
n;
int done;
char Answer;
Start:
done = 0;
cout << "Time between clicks(in ms): ";
cin >> t;
//cout << "CLicks: ";
//cin >> n;
cout << "Begin in " << endl;
cout << "5" << endl;
Sleep(1000);
cout << "4" << endl;
Sleep(1000);
cout << "3" << endl;
Sleep(1000);
cout << "2" << endl;
Sleep(1000);
cout << "1" << endl;
GetCursorPos(&CurPos);
int x = (int)CurPos.x;
int y = (int)CurPos.y;


//cout << "left clik " << x << "," << y << endl;
mouse_event(MOUSEEVENTF_LEFTDOWN, x, y, 0, 0);
Sleep(100);
mouse_event(MOUSEEVENTF_LEFTUP, x, y, 0, 0);
Sleep(t);



cout << "Again? or quit(y/n) ";
cin >> Answer;
switch (Answer) {
case 'y':
goto Start;
break;
case 'n':
system("exit");
break;

}
system("Pause");
return 0;
}
